<?xml version="1.0" encoding="UTF-8"?>
<launch>

    <let name="robot_description" value="$(command 'xacro $(find-pkg-share workshop_bringup)/config/tiago_full_unrolled.urdf')" />

    <node pkg="robot_state_publisher" exec="robot_state_publisher" output="both">
        <param name="robot_description" value="$(var robot_description)" />
    </node>

    <node pkg="controller_manager" exec="ros2_control_node" output="both">
        <param name="robot_description" value="$(var robot_description)" />
        <param from="$(find-pkg-share workshop_bringup)/config/fallback_controllers.yaml" />
    </node>

    <node pkg="controller_manager" exec="spawner"
          args="joint_state_broadcaster head_controller mobile_base_controller faulty_arm_controller"/>

</launch>
